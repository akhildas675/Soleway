        <div class="account-dashboard">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 col-md-3 col-lg-3">

                    </div>
                   
                    <!-- Assuming the EJS template is named orderDetails.ejs -->
                    <div class="col-sm-12 col-md-9 col-lg-9">
                        <!-- Order Details Content -->
                        <div class="tab-content dashboard_content" data-aos="fade-up" data-aos-delay="200">
                            <div class="tab-pane fade show active" id="order-details">
                                <h3>Order Details</h3>
                                <div class="order-details-container">
                                    <% if (locals.orderedData) { %> <!-- Check if orderedData exists -->
                                        <div class="order-info">
                                            <!-- Order ID -->
                                            <div class="order-row">
                                                <p><strong>Order ID:</strong></p>
                                                <p><%= orderedData.orderId %></p>
                                            </div>
                    
                                            <!-- Order Date -->
                                            <div class="order-row">
                                                <p><strong>Order Date:</strong></p>
                                                <p><%= new Date(orderedData.orderDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                                            </div>
                    
                                            <!-- Price Display -->
                                            <div class="order-row">
                                                <p><strong>Price:</strong></p>
                                                <% let totalPrice = 0; %>
                                                <% for (let i = 0; i < orderedData.products.length; i++) { %>
                                                    <% if (orderedData.products[i].productId) { %>
                                                        <!-- Check if realPrice exists and add to total -->
                                                        <% if (orderedData.products[i].productId.realPrice) { %>
                                                            <p>₹ <%= orderedData.products[i].productId.realPrice %></p>
                                                            <% totalPrice += orderedData.products[i].productId.realPrice * orderedData.products[i].quantity; %>
                                                        <% } else { %>
                                                            <p>Price not available</p>
                                                        <% } %>
                                                    <% } else { %>
                                                        <p>Product data not available</p>
                                                    <% } %>
                                                <% } %>
                                            </div>
                    
                                            <!-- Offer details -->
                                            <div class="order-row">
                                                <p><strong>Offer:</strong></p>
                                                <% let hasOffer = false; %>
                                                <% for (let i = 0; i < orderedData.products.length; i++) { %>
                                                    <% if (orderedData.products[i].productId && orderedData.products[i].productId.offerId) { %>
                                                        <p style="color: green;">- <%= orderedData.products[i].productId.offerId.offerPercentage %>% off</p>
                                                        <% hasOffer = true; %>
                                                    <% } %>
                                                <% } %>
                                                <% if (!hasOffer) { %>
                                                    <p>No offer available for this product</p>
                                                <% } %>
                                            </div>
                    
                                            <!-- Coupon Applied (only show if discount amount exists) -->
                                            <div class="order-row">
                                                <p><strong>Coupon Applied:</strong></p>
                                                <% if (orderedData.coupon && orderedData.coupon.discountAmount) { %>
                                                    <p>₹ <%= orderedData.coupon.discountAmount %></p>
                                                <% } else { %>
                                                    <p>No coupon applied</p>
                                                <% } %>
                                            </div>
                    
                                            <!-- Total Amount with Offer and Coupon Applied -->
                                            <div class="order-row">
                                                <p><strong>Total Amount:</strong></p>
                                                
                                                <p>₹ <%= orderedData.totalAmount %></p>
                                            </div>
                    
                                            <!-- Order Status -->
                                            <div class="order-row">
                                                <p><strong>Order Status:</strong></p>
                                                <p class="<%= orderedData.orderStatus === 'Shipped' ? 'text-info' : 
                                                            orderedData.orderStatus === 'Order Placed' ? 'text-success' : 
                                                            orderedData.orderStatus === 'Cancelled' ? 'text-danger' : 
                                                            orderedData.orderStatus === 'Returned' ? 'text-orange' : 
                                                            orderedData.orderStatus === 'Pending' ? 'text-secondary' : 
                                                            orderedData.orderStatus === 'Delivered' ? 'text-success' : '' %>">
                                                    <%= orderedData.orderStatus %>
                                                </p>
                                            </div>
                    
                                            <!-- Payment Method -->
                                            <div class="order-row">
                                                <p><strong>Payment Method:</strong></p>
                                                <p><%= orderedData.paymentMethod %></p>
                                            </div>
                                        </div>
                    
                                        <!-- Ordered Products Section -->
                                        <div class="order-products">
                                            <h4>Ordered Products</h4>
                                            <table class="styled-table">
                                                <thead>
                                                    <tr>
                                                        <th>Product</th>
                                                        <th>Quantity</th>
                                                        <th>Size</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if (orderedData.products && orderedData.products.length > 0) { %>
                                                        <% for (let i = 0; i < orderedData.products.length; i++) { %>
                                                            <tr>
                                                                <% if (orderedData.products[i].productId) { %>
                                                                    <td style="text-align: center;">
                                                                        <img src="<%= orderedData.products[i].productId.images[0] %>" alt="Product Image"
                                                                             style="max-width: 100px; max-height: 100px; object-fit: contain; display: block; margin: 0 auto;">
                                                                        <br>
                                                                        <%= orderedData.products[i].productName %>
                                                                    </td>
                                                                <% } else { %>
                                                                    <td colspan="2">Product not found</td>
                                                                <% } %>
                                                                <td><%= orderedData.products[i].quantity %></td>
                                                                <td><%= orderedData.products[i].size %></td>
                    
                                                                <!-- Button logic based on order status -->
                                                                <% if (orderedData.orderStatus === "Order Placed" || orderedData.orderStatus === "Shipped") { %>
                                                                    <td>
                                                                        <a href="#" class="btn btn-danger cancel-btn" 
                                                                           data-order-id="<%= orderedData._id %>"
                                                                           onclick="confirmCancel('<%= orderedData._id %>')">Cancel</a>
                                                                    </td>
                                                                <% } else if (orderedData.orderStatus === "Cancelled") { %>
                                                                    <td>
                                                                        <p>Order has been canceled</p>
                                                                    </td>
                                                                <% } else if (orderedData.orderStatus === "Delivered") { %>
                                                                    <td>
                                                                        <a href="#" class="btn btn-warning return-btn" 
                                                                           onclick="openReturnModal('<%= orderedData._id %>')">Return</a>
                                                                    </td>
                                                                <% } else if (orderedData.orderStatus === "Returned") { %> 
                                                                    <td>
                                                                        <p>Order has been returned</p>
                                                                    </td>
                                                                <% } else { %>
                                                                    <td>
                                                                        <p>Order cannot be canceled or returned</p>
                                                                    </td>
                                                                <% } %>
                                                                
                                                                
                                                            </tr>
                                                        <% } %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="4">No products found in this order.</td>
                                                        </tr>
                                                    <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                    
                                        <!-- Shipping Address -->
                                        <div class="order-address">
                                            <h4>Shipping Address</h4>
                                            <% if (orderedData.address) { %>
                                                <p><strong>Name:</strong> <%= orderedData.address.addressName %></p>
                                                <p><strong>Mobile:</strong> <%= orderedData.address.mobile %></p>
                                                <p><strong>Home Address:</strong> <%= orderedData.address.homeAddress %></p>
                                                <p><strong>City:</strong> <%= orderedData.address.city %></p>
                                                <p><strong>District:</strong> <%= orderedData.address.district %></p>
                                                <p><strong>State:</strong> <%= orderedData.address.state %></p>
                                                <p><strong>Pincode:</strong> <%= orderedData.address.pincode %></p>
                                            <% } else { %>
