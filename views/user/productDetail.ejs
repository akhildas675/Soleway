									<div class="item-slick3" data-thumb="<%= products.images[i] %>">
										<!-- Apply Magic Zoom here -->
										<a href="<%= products.images[i] %>" class="MagicZoom"
											data-options="zoomPosition: inner">
											<img src="<%= products.images[i] %>" alt="Product Image">
										</a>
